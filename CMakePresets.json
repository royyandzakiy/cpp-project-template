{
	"version": 3,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 28,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "clang-ninja",
			"displayName": "Clang + Ninja",
			"description": "Configure using Clang compiler with Ninja generator",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "clang",
				"CMAKE_CXX_COMPILER": "clang++",
				"CMAKE_CXX_STANDARD": "23",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON",
				"CMAKE_CXX_EXTENSIONS": "OFF",
				"CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
			},
			"binaryDir": "${sourceDir}/build-clang",
			"toolchainFile": "build/generators/conan_toolchain.cmake"
		},
		{
			"name": "gcc-ninja",
			"displayName": "GCC + Ninja",
			"description": "Configure using GCC compiler with Ninja generator",
			"generator": "Ninja",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++",
				"CMAKE_CXX_STANDARD": "23",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON",
				"CMAKE_CXX_EXTENSIONS": "OFF",
				"CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
			},
			"binaryDir": "${sourceDir}/build-gcc",
			"toolchainFile": "build/generators/conan_toolchain.cmake"
		},
		{
			"name": "msvc-vs2022",
			"displayName": "MSVC (Visual Studio 2022)",
			"description": "Configure using MSVC with Visual Studio 2022 generator",
			"generator": "Visual Studio 17 2022",
			"cacheVariables": {
				"CMAKE_CXX_STANDARD": "23",
				"CMAKE_CXX_STANDARD_REQUIRED": "ON",
				"CMAKE_CXX_EXTENSIONS": "OFF",
				"CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
			},
			"toolset": {
				"value": "v143",
				"strategy": "external"
			},
			"architecture": {
				"value": "x64",
				"strategy": "external"
			},
			"binaryDir": "${sourceDir}/build-msvc",
			"toolchainFile": "build/generators/conan_toolchain.cmake"
		}
	],
	"buildPresets": [
		{
			"name": "clang-debug",
			"configurePreset": "clang-ninja",
			"configuration": "Debug"
		},
		{
			"name": "clang-release",
			"configurePreset": "clang-ninja",
			"configuration": "Release"
		},
		{
			"name": "gcc-debug",
			"configurePreset": "gcc-ninja",
			"configuration": "Debug"
		},
		{
			"name": "gcc-release",
			"configurePreset": "gcc-ninja",
			"configuration": "Release"
		},
		{
			"name": "msvc-debug",
			"configurePreset": "msvc-vs2022",
			"configuration": "Debug"
		},
		{
			"name": "msvc-release",
			"configurePreset": "msvc-vs2022",
			"configuration": "Release"
		}
	]
}